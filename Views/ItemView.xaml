<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionManager.Views.ItemView"
             Padding="10">

    <Frame 
        BackgroundColor="{Binding BgColor}"
        BorderColor="Black"
        CornerRadius="12"
        HasShadow="True"
        Padding="15"
        Margin="10">
        <VerticalStackLayout Spacing="6">

            <Image 
                Source="{Binding ImagePath}"
                HeightRequest="150"
                WidthRequest="150"
                Aspect="AspectFill"
                Margin="0,10"
                HorizontalOptions="Center"/>

            <Label 
                Text="{Binding Name}" 
                FontSize="18" 
                FontAttributes="Bold"
                TextColor="Beige"
                HorizontalOptions="Center"/>

            <Label 
                Text="{Binding CollectionName}"
                FontSize="14"
                TextColor="Beige"
                HorizontalOptions="Center"/>

            <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,8"/>

            <Label 
                Text="{Binding Comment, StringFormat='Opis: {0}'}" 
                FontSize="14"
                TextColor="Beige"
                HorizontalOptions="Start"/>

            <Label 
                Text="{Binding Price, StringFormat='Cena: {0}'}"
                FontSize="14"
                TextColor="Beige"
                HorizontalOptions="Start"/>

            <Label 
                Text="{Binding Condition, StringFormat='Stan: {0}'}"
                FontSize="14"
                TextColor="Beige"
                HorizontalOptions="Start"/>

            <Label 
                Text="{Binding Rating, StringFormat='Ocena: {0}'}"
                FontSize="14"
                TextColor="Beige"
                HorizontalOptions="Start"/>
            <HorizontalStackLayout
                Spacing="4">
                <Label 
                    Text="{Binding CustomFieldName, StringFormat='{0}:'}"
                    FontSize="14"
                    TextColor="Beige"
                    HorizontalOptions="Start"/>

                <Label 
                    Text="{Binding CustomFieldValue}"
                    FontSize="14"
                    TextColor="Beige"
                    HorizontalOptions="Start"/>
            </HorizontalStackLayout>


            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="6">
                <Button 
                    Text="Sprzedaj"
                    BackgroundColor="Black"
                    TextColor="Beige"
                    Clicked="OnSaleClicked"
                    HorizontalOptions="Center"/>

                <Button 
                    Text="UsuÅ„"
                    BackgroundColor="Black"
                    TextColor="Beige"
                    Clicked="OnDeleteClicked"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>
