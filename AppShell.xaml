<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CollectionManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CollectionManager.Pages"
    Shell.FlyoutBehavior="Locked"
    Title="CollectionManager">

    <ShellContent
        Title="Strona Główna"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Dodaj Przedmiot"
        ContentTemplate="{DataTemplate local:AddNewItemPage}"
        Route="NewItemPage" />

    <ShellContent
        Title="Edytuj Przedmiot"
        ContentTemplate="{DataTemplate local:EditItemPage}"
        Route="EditItemPage" />


</Shell>
